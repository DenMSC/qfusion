	setColor 1, 1, 1, 1
	drawBindString "Press %s to plant" "+crouch"
endif

if %CAN_CHANGE_LOADOUT
	setColor 0.0, 0.0, 0.0, 0.5
	drawPicByName $whiteimage

	setColor 1, 1, 1, 1
